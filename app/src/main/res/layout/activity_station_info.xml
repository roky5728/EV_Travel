<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.user.hello.StationInfoActivity">


    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="10pt">


        <Button
            android:id="@+id/sta_mark"
            android:layout_width="123dp"
            android:layout_height="40dp"

            android:background="@drawable/letfinal" />


        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="충전소"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="주소"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>


        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="영업시간"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Closed(휴무일)"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_closed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Phone"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>

        <TableRow android:weightSum="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="충전 타입"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView

                android:id="@+id/Sta_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>


</LinearLayout>
